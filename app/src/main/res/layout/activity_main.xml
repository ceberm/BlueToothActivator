<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50sp"
        android:text="@string/hintEditText"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:fontFamily="sans-serif-condensed-light" />

    <Button
        android:id="@+id/btn_encender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnTextEncender" />

    <Button
        android:id="@+id/btn_apagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnTextApagar" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_margin="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="#882A48" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="History"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:fontFamily="sans-serif-condensed-light" />

    <EditText
        android:id="@+id/showHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        android:textSize="10sp" />

</LinearLayout>